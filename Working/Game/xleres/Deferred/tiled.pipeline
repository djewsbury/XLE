    SampledTexture DebuggingTextureMin;     // 1
    SampledTexture DebuggingTextureMax;     // 2
};

PipelineLayout BeamsDebugging
{
    ComputeDescriptorSet Sequencer;
    ComputeDescriptorSet BeamsDebuggingDS;
